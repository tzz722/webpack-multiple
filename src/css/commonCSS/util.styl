@import "./config";

#dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: none;
  background-color: rgba(0, 0, 0, 0.8);
  color: #FFF;
  text-align: center;
  z-index: 999;
  background: url(../../img/commonIMG/al-button.png) no-repeat center bottom, url(../../img/commonIMG/al-info.png) no-repeat left top, rgba(0, 0, 0, 0.8) url(../../img/commonIMG/al-more.png) no-repeat right top;
  background-size: 80%, 80%, rem(280);
}

//加载层

.loader-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loader-text-h5 {
  text-align: center;
  color: white;
  margin-top: rem(20);
  font-size: rem(25);
  font-weight: 600;
}

.loader-text-pc {
  text-align: center;
  color: white;
  margin-top: remPC(20);
  font-size: remPC(25);
  font-weight: 600;
}

.loader-box-hide{
  animation: hide-loader-mask 500ms linear;
}


.inner-box {
  width: 100%;
  overflow: hidden;
}

.loader-box-h5 {
  border-radius: rem(20);
  padding: rem(30);
  width: rem(130);
  height: rem(130);
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loader-box-pc {
  border-radius: remPC(20);
  padding: remPC(30);
  width: remPC(130);
  height: remPC(130);
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

@keyframes hide-loader-mask
{
  from {opacity: 1;}
  to {opacity: 0;}
}


.pacman-h5 {
  position: relative;
  > div {
    &:nth-child(1), &:nth-child(2) {
      width: 0;
      height: 0;
      border-right: rem(40) solid transparent;
      border-top: rem(40) solid #fff;
      border-left: rem(40) solid #fff;
      border-bottom: rem(40) solid #fff;
      border-radius: 50%;
    }
    &:nth-child(1) {
      animation: rotate_pacman_half_up 0.5s 0s infinite;
    }
    &:nth-child(2) {
      position: absolute;
      left: 0;
      top: 0;
      animation: rotate_pacman_half_down 0.5s 0s infinite;
    }
    &:nth-child(3), &:nth-child(4), &:nth-child(5) {
      background-color: #fff;
      border-radius: 50%;
      width: rem(15);
      height: rem(15);
      position: absolute;
      top: rem(35);
      left: rem(200);
    }
    &:nth-child(3) {
      animation: pacman-balls-h5 1s 0.33s infinite linear;
    }
    &:nth-child(4) {
      animation: pacman-balls-h5 1s 0.66s infinite linear;
    }
    &:nth-child(5) {
      animation: pacman-balls-h5 1s 0.99s infinite linear;
    }
  }
}

.pacman-pc {
  position: relative;
  > div {
    &:nth-child(1), &:nth-child(2) {
      width: 0;
      height: 0;
      border-right: remPC(40) solid transparent;
      border-top: remPC(40) solid #fff;
      border-left: remPC(40) solid #fff;
      border-bottom: remPC(40) solid #fff;
      border-radius: 50%;
    }
    &:nth-child(1) {
      animation: rotate_pacman_half_up 0.5s 0s infinite;
    }
    &:nth-child(2) {
      position: absolute;
      left: 0;
      top: 0;
      animation: rotate_pacman_half_down 0.5s 0s infinite;
    }
    &:nth-child(3), &:nth-child(4), &:nth-child(5) {
      background-color: #fff;
      border-radius: 50%;
      width: remPC(15);
      height: remPC(15);
      position: absolute;
      top: remPC(35);
      left: remPC(200);
    }
    &:nth-child(3) {
      animation: pacman-balls-pc 1s 0.33s infinite linear;
    }
    &:nth-child(4) {
      animation: pacman-balls-pc 1s 0.66s infinite linear;
    }
    &:nth-child(5) {
      animation: pacman-balls-pc 1s 0.99s infinite linear;
    }
  }
}

@keyframes rotate_pacman_half_up {
  0% {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg);
  }

  50% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }

  100% {
    -webkit-transform: rotate(270deg);
    transform: rotate(270deg);
  }
}

@keyframes rotate_pacman_half_down {
  0% {
    transform: rotate(90deg);
  }
  50% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(90deg);
  }
}

@keyframes pacman-balls-h5 {
  50% {
    opacity: 0.9;
  }
  75% {
    opacity: 0.7;
  }
  100% {
    transform: translate(rem(-200), 0);
  }
}

@keyframes pacman-balls-pc {
  50% {
    opacity: 0.9;
  }
  75% {
    opacity: 0.7;
  }
  100% {
    transform: translate(remPC(-200), 0);
  }
}
